{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C File",
            "command": "gcc",
            "type": "shell",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/main.o",
                "-I",
                "include",
                "-L", 
                "lib", 
                "-lraylib", 
                "-lgdi32", 
                "-lwinmm"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}